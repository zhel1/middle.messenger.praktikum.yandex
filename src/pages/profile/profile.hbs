    <div class="messenger__widget">
        {{#> FormProfile}}
            {{> ConfInput label="First name:" type="text" name="first_name" value=first_name }}
            {{> ConfInput label="Second name:" type="text" name="second_name" value=second_name}}
            {{> ConfInput label="Display name:" type="text" name="display_name" value=display_name}}
